{
  "name": "@tezos-kiln/pyrometer",
  "version": "0.1.0-rc15",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "version": "echo $npm_package_version",
    "name": "echo $npm_package_name",
    "preinstall": "if command -v git; then git config core.hooksPath githooks; fi",
    "build": "yarn -s clean && tsc",
    "clean": "rm -rf dist",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "inspect": "ts-node-dev --inspect --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "eslint:lint": "eslint . --ext .ts",
    "lint": "yarn eslint:lint && yarn tsc:lint && yarn prettier:lint",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prettier:lint": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "tsc:lint": "tsc --noEmit -p .",
    "prepublishOnly": "yarn build"
  },
  "bin": {
    "pyrometer": "./bin/pyrometer.js"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/nconf": "0.10.1",
    "@types/node": "~14",
    "@types/node-notifier": "8.0.1",
    "@types/node-telegram-bot-api": "0.51.4",
    "@types/nodemailer": "6.4.4",
    "@types/proper-lockfile": "^4.1.2",
    "@types/validatorjs": "3.15.0",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.0.6",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@slack/webhook": "6.0.0",
    "@taquito/rpc": "10.1.0",
    "@taquito/utils": "10.1.0",
    "chalk": "4.1.2",
    "cross-fetch": "3.1.4",
    "date-fns": "2.23.0",
    "env-paths": "2.2.1",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "nconf": "0.11.3",
    "node-notifier": "10.0.0",
    "node-telegram-bot-api": "0.54.0",
    "nodemailer": "6.6.3",
    "proper-lockfile": "^4.1.2",
    "validatorjs": "3.22.1",
    "yargs": "17.1.1"
  }
}
