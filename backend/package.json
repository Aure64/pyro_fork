{
  "name": "@tezos-kiln/pyrometer",
  "version": "0.1.3",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "pyrometer": "./bin/pyrometer.js"
  },
  "scripts": {
    "version": "echo $npm_package_version",
    "name": "echo $npm_package_name",
    "prebuild": "yarn generate:gql",
    "build": "yarn -s clean && tsc",
    "clean": "rm -rf dist",
    "predev": "if command -v git; then git config core.hooksPath githooks; fi",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "inspect": "ts-node-dev --inspect --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "eslint:lint": "eslint . --ext .ts",
    "lint": "yarn eslint:lint && yarn tsc:lint && yarn prettier:lint",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prettier:lint": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "tsc:lint": "tsc --noEmit -p .",
    "generate:gql": "NODE_ENV=development ts-node --transpile-only src/api/schema.ts",
    "prepublishOnly": "yarn build && (cd ../ui && yarn build) && cp -a ../ui/build/. ./ui"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/lodash": "4.14.172",
    "@types/lru-cache": "^5.1.1",
    "@types/morgan": "^1.9.3",
    "@types/nconf": "0.10.1",
    "@types/node": "~14",
    "@types/node-notifier": "8.0.1",
    "@types/node-telegram-bot-api": "0.53.2",
    "@types/nodemailer": "6.4.4",
    "@types/proper-lockfile": "^4.1.2",
    "@types/validatorjs": "3.15.0",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@slack/webhook": "6.0.0",
    "@taquito/rpc": "10.2.1",
    "@taquito/utils": "10.2.1",
    "chalk": "4.1.2",
    "cors": "^2.8.5",
    "cross-fetch": "3.1.4",
    "date-fns": "2.25.0",
    "env-paths": "2.2.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.6.1",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "lru-cache": "^6.0.0",
    "morgan": "^1.10.0",
    "nconf": "0.11.3",
    "nexus": "^1.1.0",
    "node-notifier": "10.0.0",
    "node-telegram-bot-api": "0.54.0",
    "nodemailer": "6.7.0",
    "proper-lockfile": "^4.1.2",
    "validatorjs": "3.22.1",
    "yargs": "^17.2.1"
  },
  "files": [
    "ui",
    "dist",
    "!dist/testFixtures",
    "!dist/*.test.js"
  ]
}
