{
  "name": "backend",
  "version": "0.0.1",
  "main": "dist/server.js",
  "scripts": {
    "build": "yarn -s clean && tsc",
    "clean": "rm -rf dist",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier:lint": "prettier --check 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "tsc:lint": "tsc --noEmit -p ."
  },
  "devDependencies": {
    "@types/node": "14.14.13",
    "prettier": "2.2.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">= 15.4.0"
  }
}
