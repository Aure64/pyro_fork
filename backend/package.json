{
  "name": "@tezos-kiln/pyrometer",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "git config core.hooksPath githooks",
    "build": "yarn -s clean && tsc",
    "clean": "rm -rf dist",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "inspect": "ts-node-dev --inspect --tree-kill --no-notify --respawn --transpile-only --exit-child src/index.ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "eslint:lint": "eslint . --ext .ts",
    "lint": "yarn eslint:lint && yarn tsc:lint && yarn prettier:lint",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prettier:lint": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "tsc:lint": "tsc --noEmit -p .",
    "prepublishOnly": "yarn build"
  },
  "bin": {
    "pyrometer": "./bin/pyrometer.js"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/nconf": "0.10.1",
    "@types/node": "~14",
    "@types/node-notifier": "8.0.1",
    "@types/node-telegram-bot-api": "0.51.3",
    "@types/nodemailer": "6.4.2",
    "@types/proper-lockfile": "^4.1.1",
    "@types/validatorjs": "3.15.0",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.0.6",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.3.2",
    "ts-jest": "27.0.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">= 14"
  },
  "publishConfig": {
    "@tezos-kiln:registry": "https://gitlab.com/api/v4/projects/22897259/packages/npm/"
  },
  "dependencies": {
    "@slack/webhook": "6.0.0",
    "@taquito/rpc": "9.2.0",
    "chalk": "4.1.1",
    "cross-fetch": "3.1.4",
    "date-fns": "2.22.1",
    "env-paths": "2.2.1",
    "loglevel": "1.7.1",
    "loglevel-plugin-prefix": "0.8.4",
    "nconf": "0.11.3",
    "node-notifier": "10.0.0",
    "node-telegram-bot-api": "0.53.0",
    "nodemailer": "6.6.2",
    "proper-lockfile": "^4.1.2",
    "validatorjs": "3.22.1",
    "yargs": "17.0.1"
  }
}
